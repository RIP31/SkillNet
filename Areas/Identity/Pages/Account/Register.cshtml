@page
@model RegisterModel
@{
    ViewData["Title"] = "Join SkillNet - Create Your Account";
    Layout = "_Layout";
}

<div class="container-fluid p-0" style="min-height: 100vh; background: #f8fafc;">
    <div class="row g-0 min-vh-100">
        <!-- Left Side - Hero Section -->
        <div class="col-lg-5 d-none d-lg-flex" style="background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);">
            <div class="d-flex flex-column justify-content-center align-items-center text-white p-5">
                <div class="text-center mb-5">
                    <i class="bi bi-cpu display-1 mb-4" style="font-size: 4rem;"></i>
                    <h1 class="display-5 fw-bold mb-3">Join SkillNet</h1>
                    <p class="lead mb-4">Connect, collaborate, and grow your career with talented professionals worldwide</p>
                </div>
                
                <div class="w-100" style="max-width: 350px;">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="feature-icon bg-white bg-opacity-20 mb-3">
                                <i class="bi bi-people"></i>
                            </div>
                            <h6 class="fw-semibold mb-1">10K+</h6>
                            <small class="text-white-50">Professionals</small>
                        </div>
                        <div class="col-4">
                            <div class="feature-icon bg-white bg-opacity-20 mb-3">
                                <i class="bi bi-briefcase"></i>
                            </div>
                            <h6 class="fw-semibold mb-1">5K+</h6>
                            <small class="text-white-50">Projects</small>
                        </div>
                        <div class="col-4">
                            <div class="feature-icon bg-white bg-opacity-20 mb-3">
                                <i class="bi bi-trophy"></i>
                            </div>
                            <h6 class="fw-semibold mb-1">95%</h6>
                            <small class="text-white-50">Success Rate</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Side - Register Form -->
        <div class="col-lg-7">
            <div class="d-flex flex-column justify-content-center min-vh-100 p-4">
                <div class="mx-auto" style="max-width: 480px; width: 100%;">
                    <!-- Mobile Header -->
                    <div class="text-center mb-4 d-lg-none">
                        <i class="bi bi-cpu text-primary mb-3" style="font-size: 3rem;"></i>
                        <h2 class="fw-bold text-dark">SkillNet</h2>
                    </div>
                    
                    <!-- Welcome Header -->
                    <div class="mb-4">
                        <h2 class="fw-bold text-dark mb-2">Create your account</h2>
                        <p class="text-muted">Join thousands of professionals and start building your network</p>
                    </div>

                    <!-- Register Form -->
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger rounded-3" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Input.Email" class="form-label fw-semibold text-dark">
                                Email Address
                            </label>
                            <div class="position-relative">
                                <i class="bi bi-envelope position-absolute text-muted" style="left: 15px; top: 50%; transform: translateY(-50%); z-index: 10;"></i>
                                <input asp-for="Input.Email" class="form-control form-control-lg ps-5" 
                                       style="border-radius: 1rem; border: 2px solid #e9ecef; padding: 1rem 1rem 1rem 3rem;"
                                       placeholder="Enter your email address" autocomplete="username" />
                            </div>
                            <small class="form-text text-muted mt-1">We'll use this to send you important updates</small>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.Password" class="form-label fw-semibold text-dark">
                                Password
                            </label>
                            <div class="position-relative">
                                <i class="bi bi-lock position-absolute text-muted" style="left: 15px; top: 50%; transform: translateY(-50%); z-index: 10;"></i>
                                <input asp-for="Input.Password" class="form-control form-control-lg ps-5 pe-5" 
                                       style="border-radius: 1rem; border: 2px solid #e9ecef; padding: 1rem 3rem 1rem 3rem;"
                                       placeholder="Create a strong password" autocomplete="new-password" />
                                <button type="button" class="btn btn-link position-absolute password-toggle text-muted" 
                                        style="right: 15px; top: 50%; transform: translateY(-50%); padding: 0; border: none; background: none; z-index: 10;">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <div class="password-requirements mt-2">
                                <small class="text-muted d-flex align-items-center">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Password must be at least 6 characters long
                                </small>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold text-dark">
                                Confirm Password
                            </label>
                            <div class="position-relative">
                                <i class="bi bi-shield-check position-absolute text-muted" style="left: 15px; top: 50%; transform: translateY(-50%); z-index: 10;"></i>
                                <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg ps-5 pe-5" 
                                       style="border-radius: 1rem; border: 2px solid #e9ecef; padding: 1rem 3rem 1rem 3rem;"
                                       placeholder="Confirm your password" autocomplete="new-password" />
                                <button type="button" class="btn btn-link position-absolute password-toggle text-muted" 
                                        style="right: 15px; top: 50%; transform: translateY(-50%); padding: 0; border: none; background: none; z-index: 10;">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="agreeToTerms" required 
                                       style="border-radius: 0.5rem;">
                                <label class="form-check-label text-muted" for="agreeToTerms">
                                    I agree to the <a href="#" class="text-primary text-decoration-none fw-semibold">Terms of Service</a> 
                                    and <a href="#" class="text-primary text-decoration-none fw-semibold">Privacy Policy</a>
                                </label>
                            </div>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg" 
                                    style="border-radius: 1rem; padding: 1rem; font-weight: 600;">
                                <i class="bi bi-person-plus me-2"></i>
                                Create My Account
                            </button>
                        </div>
                    </form>

                    <!-- Divider -->
                    <div class="position-relative text-center mb-4">
                        <hr class="text-muted">
                        <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">
                            Already have an account?
                        </span>
                    </div>

                    <!-- Login Button -->
                    <div class="d-grid mb-4">
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" 
                           class="btn btn-outline-primary btn-lg" 
                           style="border-radius: 1rem; padding: 1rem; font-weight: 600;">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Sign In Instead
                        </a>
                    </div>

                    <!-- External Logins -->
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="position-relative text-center mb-3">
                            <hr class="text-muted">
                            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">
                                Or continue with
                            </span>
                        </div>
                        
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-outline-secondary btn-lg" 
                                            style="border-radius: 1rem; padding: 1rem;"
                                            name="provider" value="@provider.Name" 
                                            title="Sign up with @provider.DisplayName">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                    
                    <!-- Footer -->
                    <div class="text-center mt-4">
                        <p class="text-muted small">
                            By creating an account, you agree to our 
                            <a href="#" class="text-primary text-decoration-none">Terms of Service</a> and 
                            <a href="#" class="text-primary text-decoration-none">Privacy Policy</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Password toggle functionality
            $('.password-toggle').click(function() {
                const passwordField = $(this).siblings('input[type="password"], input[type="text"]');
                const icon = $(this).find('i');
                
                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });

            // Enhanced password strength indicator
            $('#Input_Password').on('input', function() {
                const password = $(this).val();
                const requirements = $('.password-requirements');
                const icon = requirements.find('i');
                const text = requirements.find('small');
                
                if (password.length >= 6) {
                    text.removeClass('text-muted').addClass('text-success');
                    icon.removeClass('bi-info-circle').addClass('bi-check-circle');
                } else {
                    text.removeClass('text-success').addClass('text-muted');
                    icon.removeClass('bi-check-circle').addClass('bi-info-circle');
                }
            });

            // Enhanced form focus effects
            $('.form-control').on('focus', function() {
                $(this).css('border-color', 'var(--primary)');
                $(this).css('box-shadow', '0 0 0 0.25rem rgba(67, 97, 238, 0.15)');
            }).on('blur', function() {
                if (!$(this).val()) {
                    $(this).css('border-color', '#e9ecef');
                    $(this).css('box-shadow', 'none');
                }
            });

            // Real-time password confirmation validation
            $('#Input_ConfirmPassword').on('input', function() {
                const password = $('#Input_Password').val();
                const confirmPassword = $(this).val();
                let feedback = $(this).siblings('.password-match-feedback');
                
                if (confirmPassword) {
                    if (password === confirmPassword) {
                        if (!feedback.length) {
                            $(this).after('<small class="text-success password-match-feedback"><i class="bi bi-check-circle me-1"></i>Passwords match</small>');
                        } else {
                            feedback.removeClass('text-danger').addClass('text-success');
                            feedback.html('<i class="bi bi-check-circle me-1"></i>Passwords match');
                        }
                        $(this).removeClass('is-invalid').addClass('is-valid');
                    } else {
                        if (!feedback.length) {
                            $(this).after('<small class="text-danger password-match-feedback"><i class="bi bi-x-circle me-1"></i>Passwords do not match</small>');
                        } else {
                            feedback.removeClass('text-success').addClass('text-danger');
                            feedback.html('<i class="bi bi-x-circle me-1"></i>Passwords do not match');
                        }
                        $(this).removeClass('is-valid').addClass('is-invalid');
                    }
                } else {
                    feedback.remove();
                    $(this).removeClass('is-invalid is-valid');
                }
            });

            // Form submission with enhanced validation
            $('form').on('submit', function(e) {
                // Check terms checkbox
                if (!$('#agreeToTerms').is(':checked')) {
                    e.preventDefault();
                    
                    // Remove existing alerts
                    $('.alert-warning').remove();
                    
                    $('<div class="alert alert-warning alert-dismissible fade show rounded-3" role="alert">' +
                      '<i class="bi bi-exclamation-triangle me-2"></i>Please agree to the Terms of Service and Privacy Policy to continue.' +
                      '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                      '</div>').insertBefore('form');
                      
                    // Scroll to alert
                    $('html, body').animate({scrollTop: $('.alert-warning').offset().top - 20}, 500);
                    return false;
                }
                
                const submitBtn = $(this).find('button[type="submit"]');
                const originalHtml = submitBtn.html();
                
                submitBtn.prop('disabled', true);
                submitBtn.html('<span class="spinner-border spinner-border-sm me-2" role="status"></span>Creating Account...');
                
                // Re-enable button after 5 seconds (in case of validation errors)
                setTimeout(function() {
                    submitBtn.prop('disabled', false);
                    submitBtn.html(originalHtml);
                }, 5000);
            });

            // Smooth animations for form elements
            $('.form-control').each(function() {
                $(this).css('transition', 'all 0.3s ease');
            });

            $('.btn').each(function() {
                $(this).css('transition', 'all 0.3s ease');
            });

            // Terms checkbox animation
            $('#agreeToTerms').on('change', function() {
                if ($(this).is(':checked')) {
                    $(this).closest('.form-check').addClass('text-success');
                } else {
                    $(this).closest('.form-check').removeClass('text-success');
                }
            });
        });
    </script>
}
