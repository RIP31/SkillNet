@model PaginatedList<SkillNet.Models.Project>

@{
    ViewData["Title"] = "My Projects - SkillNet";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="bi bi-briefcase me-2"></i>My Projects
            </h2>
            <p class="text-muted">Manage and track your project collaborations</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus me-2"></i>New Project
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var project in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card project-card h-100 shadow-sm">
                        <div class="card-body p-4 position-relative">
                            <!-- Status Badge -->
                            <span class="position-absolute top-0 end-0 m-3">
                                <span class="badge @(project.ProjectType == "Startup" ? "bg-danger" : 
                                                      project.ProjectType == "Freelance" ? "bg-success" : 
                                                      project.ProjectType == "Open Source" ? "bg-info" : "bg-primary")">
                                    @project.ProjectType
                                </span>
                            </span>

                            <!-- Project Title & Description -->
                            <div class="mb-3">
                                <h5 class="card-title fw-bold mb-2">@project.Title</h5>
                                <p class="text-muted small">
                                    @if (!string.IsNullOrEmpty(project.Description))
                                    {
                                        @(project.Description.Length > 100 ? project.Description.Substring(0, 100) + "..." : project.Description)
                                    }
                                </p>
                            </div>

                            <!-- Skills Required -->
                            @if (project.ProjectSkills != null && project.ProjectSkills.Any())
                            {
                                <div class="mb-3">
                                    <small class="text-muted d-block mb-2">
                                        <i class="bi bi-star me-1"></i>Skills Needed
                                    </small>
                                    <div class="skills-container">
                                        @foreach (var projectSkill in project.ProjectSkills.Take(3))
                                        {
                                            <span class="skill-badge expert">@projectSkill.Skill?.Name</span>
                                        }
                                        @if (project.ProjectSkills.Count() > 3)
                                        {
                                            <span class="skill-badge" style="background-color: #f8f9fa; color: #6c757d;">
                                                +@(project.ProjectSkills.Count() - 3)
                                            </span>
                                        }
                                    </div>
                                </div>
                            }

                            <!-- Project Details -->
                            <div class="row g-2 mb-3">
                                @if (!string.IsNullOrEmpty(project.EstimatedDuration))
                                {
                                    <div class="col-12 mb-2">
                                        <small class="text-muted d-block">Duration</small>
                                        <span class="badge bg-light text-dark">@project.EstimatedDuration</span>
                                    </div>
                                }
                                
                                @if (!string.IsNullOrEmpty(project.CompensationType))
                                {
                                    <div class="col-12 mb-2">
                                        <small class="text-muted d-block">Compensation</small>
                                        <span class="badge @(project.CompensationType == "Paid" ? "bg-success" : 
                                                             project.CompensationType == "Equity" ? "bg-warning text-dark" : "bg-secondary")">
                                            @project.CompensationType
                                        </span>
                                    </div>
                                }

                                <div class="col-12">
                                    <small class="text-muted d-block">Created</small>
                                    <small class="fw-semibold">@project.CreatedDate.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>

                            <!-- Collaborators Count -->
                            @if (project.Collaborators != null)
                            {
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-people me-1"></i>
                                        @project.Collaborators.Count() collaborator(s)
                                    </small>
                                </div>
                            }

                            <!-- Action Buttons -->
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@project.Id" 
                                   class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye me-2"></i>View Details
                                </a>
                                
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-outline-success btn-sm flex-fill">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                    <button class="btn btn-outline-danger btn-sm flex-fill delete-project"
                                            data-project-id="@project.Id">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Projects pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-pageIndex="@(Model.PageIndex - 1)">Previous</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageIndex="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-briefcase display-1 text-muted"></i>
            <h3 class="text-muted mt-3">No projects yet</h3>
            <p class="text-muted">Start building your portfolio by creating your first project!</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus me-2"></i>Create Your First Project
            </a>
        </div>
    }
</div>

@section Scripts {
    <style>
        .project-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            border-radius: 1rem;
        }
        
        .project-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 1rem 2.5rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
    
    <script>
        $(document).ready(function() {
            $('.delete-project').click(function(e) {
                e.preventDefault();
                var projectId = $(this).data('project-id');
                var projectCard = $(this).closest('.col-lg-4');
                
                if (confirm('Are you sure you want to delete this project? This action cannot be undone.')) {
                    // You can implement actual deletion logic here
                    projectCard.fadeOut(500, function() {
                        $(this).remove();
                    });
                    
                    $('<div class="alert alert-success alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 9999;">' +
                      '<strong>Success!</strong> Project has been deleted.' +
                      '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                      '</div>').appendTo('body').delay(3000).fadeOut(500, function() { $(this).remove(); });
                }
            });
        });
    </script>
}