<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkillNet</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #4361ee;
            --secondary: #6c757d;
            --success: #198754;
            --info: #0dcaf0;
            --warning: #ffc107;
            --danger: #dc3545;
            --light: #f8f9fa;
            --dark: #212529;
            --gradient-start: #4361ee;
            --gradient-end: #3a0ca3;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8fafc;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary) !important;
        }

        .hero-section {
            background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
            color: white;
            padding: 4rem 0;
            border-radius: 0 0 2rem 2rem;
            margin-bottom: 3rem;
        }

        .skill-badge {
            font-size: 0.85rem;
            margin: 0.2rem;
            padding: 0.35rem 0.75rem;
            border-radius: 50px;
            display: inline-block;
        }

            .skill-badge.beginner {
                background-color: #e8f5e8;
                color: #2e7d32;
            }

            .skill-badge.intermediate {
                background-color: #e3f2fd;
                color: #1565c0;
            }

            .skill-badge.expert {
                background-color: #fce4ec;
                color: #c2185b;
            }

        .profile-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.08);
        }

            .profile-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 1rem 2.5rem rgba(0, 0, 0, 0.15);
            }

        .availability-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            z-index: 1;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
            border: none;
            border-radius: 50px;
            padding: 0.6rem 1.5rem;
            font-weight: 500;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(67, 97, 238, 0.3);
            }

        .feature-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
            color: white;
            font-size: 1.5rem;
        }

        footer {
            background-color: var(--dark);
            color: white;
            padding: 3rem 0 2rem;
            margin-top: 4rem;
        }

        .form-control, .form-select {
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            border: 1px solid #dee2e6;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
        }

        /* Responsive Improvements */
        @@media (max-width: 768px) {
            .hero-section {
                padding: 2rem 0;
                border-radius: 0 0 1rem 1rem;
            }
            
            .profile-card {
                margin-bottom: 1.5rem;
            }
            
            .project-card {
                margin-bottom: 1.5rem;
            }
            
            .skill-badge {
                font-size: 0.75rem;
                margin: 0.1rem;
                padding: 0.25rem 0.5rem;
            }
            
            .navbar-brand {
                font-size: 1.1rem;
            }
            
            .btn-group .btn {
                font-size: 0.875rem;
                padding: 0.375rem 0.75rem;
            }
        }
        
        @@media (max-width: 576px) {
            .container {
                padding-left: 15px;
                padding-right: 15px;
            }
            
            .card-body {
                padding: 1.5rem 1rem;
            }
            
            .d-flex.gap-3 {
                flex-direction: column;
                gap: 0.5rem !important;
            }
            
            .btn-group {
                flex-direction: column;
            }
            
            .btn-group .btn {
                border-radius: 0.375rem !important;
                margin-bottom: 0.25rem;
            }
        }
        
        /* Touch-friendly improvements */
        @@media (hover: none) {
            .profile-card:hover,
            .project-card:hover {
                transform: none;
            }
            
            .btn {
                min-height: 44px;
            }
            
            .form-control,
            .form-select {
                min-height: 44px;
            }
        }

        /* Authentication Pages Styling */
        .auth-page {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
            padding-top: 2rem;
            padding-bottom: 2rem;
        }

        .auth-card {
            background: white;
            border-radius: 1.5rem;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            padding: 3rem 2.5rem;
            border: none;
            position: relative;
            overflow: hidden;
        }

        .auth-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
        }

        .auth-title {
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .auth-subtitle {
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .auth-divider {
            position: relative;
            color: #6c757d;
            font-size: 0.9rem;
            background: white;
            padding: 0 1rem;
        }

        .auth-divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: -200px;
            right: calc(100% + 1rem);
            height: 1px;
            background: #dee2e6;
        }

        .auth-divider::after {
            content: '';
            position: absolute;
            top: 50%;
            right: -200px;
            left: calc(100% + 1rem);
            height: 1px;
            background: #dee2e6;
        }

        .password-toggle {
            color: #6c757d;
            z-index: 10;
        }

        .password-toggle:hover {
            color: var(--primary);
        }

        .password-requirements {
            font-size: 0.875rem;
        }

        .auth-features,
        .auth-benefits {
            animation: fadeInUp 0.6s ease-out 0.3s both;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .auth-card {
            animation: fadeIn 0.6s ease-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: scale(0.95);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Form enhancements for auth pages */
        .auth-page .form-control-lg {
            padding: 1rem 1.25rem;
            border-radius: 0.75rem;
            border: 2px solid #e9ecef;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .auth-page .form-control-lg:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.15);
            transform: translateY(-1px);
        }

        .auth-page .btn-lg {
            border-radius: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

        .auth-page .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(67, 97, 238, 0.3);
        }

        .auth-page .btn-outline-primary:hover {
            transform: translateY(-1px);
        }

        /* Responsive auth pages */
        @@media (max-width: 768px) {
            .auth-card {
                padding: 2rem 1.5rem;
                margin: 1rem;
                border-radius: 1rem;
            }
            
            .auth-title {
                font-size: 1.5rem;
            }
            
            .auth-subtitle {
                font-size: 1rem;
            }
        }

        @@media (max-width: 576px) {
            .auth-page {
                padding-top: 1rem;
                padding-bottom: 1rem;
            }
            
            .auth-card {
                padding: 1.5rem 1rem;
                margin: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3 shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cpu"></i> SkillNet
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Search" asp-action="FindTalent">Find Talent</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Projects" asp-action="Browse">Browse Projects</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="projectsDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-folder me-1"></i>Projects
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Projects" asp-action="Index">My Projects</a></li>
                                    <li><a class="dropdown-item" asp-controller="Projects" asp-action="Create">Create Project</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- AUTHENTICATION SECTION -->
                    <div class="d-flex">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-outline-primary me-2" asp-area="Identity" asp-page="/Account/Manage/Index">My Account</a>
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                                <button type="submit" class="btn btn-primary">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
                        }
                    </div>
                    <!-- END AUTHENTICATION SECTION -->

                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-lg-start">
        <div class="container p-4">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">SkillNet</h5>
                    <p>Connect with skilled professionals and build amazing projects together. Find your co-founder, project team, or next gig.</p>
                </div>

                <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="text-white">Home</a></li>
                        <li><a asp-controller="Search" asp-action="FindTalent" class="text-white">Find Talent</a></li>
                        <li><a asp-controller="Projects" asp-action="Browse" class="text-white">Browse Projects</a></li>
                        <li><a href="#" class="text-white">How It Works</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Contact</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-envelope me-2"></i> contact@skillnet.com</li>
                        <li><i class="bi bi-telephone me-2"></i> + 1 234 567 88</li>
                        <li><i class="bi bi-geo-alt me-2"></i> New York, NY 10012, US</li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Follow Us</h5>
                    <div class="d-flex justify-content-center justify-content-lg-start">
                        <a href="#" class="text-white me-3"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2023 Copyright: <a class="text-white" href="#">SkillNet.com</a>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function() {
            $('.skill-checkbox').change(function() {
                var proficiencySelect = $(this).siblings('.proficiency-level');
                if (this.checked) {
                    proficiencySelect.show();
                } else {
                    proficiencySelect.hide();
                }
            });

            // Hide all proficiency selects initially
            $('.proficiency-level').hide();
        });
    </script>
   
</body>
</html>