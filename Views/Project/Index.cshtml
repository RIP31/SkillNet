@model IEnumerable<SkillNet.Models.Project>

@{
    ViewData["Title"] = "My Projects - SkillNet";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Projects</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>New Project
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var project in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@project.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@project.ProjectType</h6>
                            <p class="card-text">@(project.Description.Length > 100 ? project.Description.Substring(0, 100) + "..." : project.Description)</p>

                            @if (project.ProjectSkills != null && project.ProjectSkills.Any())
                            {
                                <div class="mb-3">
                                    <strong>Skills Needed:</strong>
                                    @foreach (var skill in project.ProjectSkills)
                                    {
                                        <span class="badge bg-secondary">@skill.Skill.Name</span>
                                    }
                                </div>
                            }

                            <div class="d-flex justify-content-between text-muted small">
                                <span>@project.CreatedDate.ToString("MMM dd, yyyy")</span>
                                <span>@project.CompensationType</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-folder-plus display-1 text-muted"></i>
            <h3 class="text-muted mt-3">No projects yet</h3>
            <p class="text-muted">Create your first project to start finding team members.</p>
            <a asp-action="Create" class="btn btn-primary mt-2">Create Project</a>
        </div>
    }
</div>